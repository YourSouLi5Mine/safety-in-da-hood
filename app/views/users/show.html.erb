<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= gravatar_for @user %></h1>
      <h1><%= @user.username %></h1>
      <h1><%= @user.email %></h1>
    </section>
    <section class="tweet_form">
      <%= render 'partials/tweet_form' %>
    </section>
  </aside>
  <div class="col-md-8"> 
    <% if @user.tweets.any? %>
      <h3>Tweets (<%= @user.tweets.count %>)</h3>
      <ol class="tweets">
        <%= render @tweets%>
      </ol>
      <%= will_paginate @tweets %>
    <% end %>
  </div>
</div>
