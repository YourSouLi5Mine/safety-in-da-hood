<h1 class="text-center">All users</h1>
  <div class="col-md-4 col-md-offset-4 text-center">
    <%= will_paginate @users %>
    <ul class="users">
      <% @users.each do |user| %>
        <% @user = user %>
        <li>
          <div class="col-md-offset-3"><%= gravatar_for @user, size: 50 %></div>
          <div class="col-md-3"><%= @user.username %></div>
          <%= render 'follow_form' %>
        </li>
      <% end %>
    </ul>
    <%= will_paginate @users %>
  </div>
</div>
